{% extends "base.html.twig" %}

{% block title %}Authors{% endblock %}

{% block body %}
  <div class="d-flex mb-2">
    <a class="btn btn-success" href="/authors/create">New author</a>
  </div>
  <table class="table table-hover">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Lastname</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for author in authors %}
      <tr>
        <th scope="row">{{ author.id }}</th>
        <td>{{ author.name }}</td>
        <td>{{ author.lastname }}</td>
        <td>
          <div class="d-flex">
            <div class="edit-wrapper mr-2">
              <a class="btn btn-warning" href="/authors/edit?id={{ author.id }}">Edit</a>
            </div>
            <div class="delete-wrapper">
              <form method="post" action="/authors/delete">
                <input type="hidden" name="id_author" value="{{ author.id }}">
                <button class="btn btn-danger"
                        type="submit">Delete</button>
              </form>
            </div>
          </div>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endblock %}
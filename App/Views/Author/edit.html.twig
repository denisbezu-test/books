{% extends "base.html.twig" %}

{% block title %}Author edit{% endblock %}

{% block body %}
  {% if error is defined %}
    <div class="alert alert-danger" role="alert">
      {{ error }}
    </div>
  {% endif %}
  <form action="/authors/edit/submit"
        method="post"
  >
    <div class="form-group">
      <input type="hidden" name="id" value="{{ author.id }}">
      <label for="name">Name</label>
      <input type="text"
             name="name"
             value="{{ author.name }}"
             placeholder="Name"
             class="form-control"/>
    </div>
    <div class="form-group">
      <label for="name">Lastname</label>
      <input type="text"
             name="lastname"
             value="{{ author.lastname }}"
             placeholder="Lastname"
             class="form-control"/>
    </div>
    <div class="form-group d-flex justify-content-end">
      <button type="submit"
              class="btn btn-success">
        Submit
      </button>
    </div>
  </form>
{% endblock %}
{% extends "base.html.twig" %}

{% block title %}Publisher edit{% endblock %}

{% block body %}
  {% if error is defined %}
    <div class="alert alert-danger" role="alert">
      {{ error }}
    </div>
  {% endif %}
  <form action="/publishers/edit/submit"
        method="post"
  >
    <div class="form-group">
      <input type="hidden" name="id" value="{{ publisher.id }}">
      <label for="name">Name</label>
      <input type="text"
             name="name"
             value="{{ publisher.name }}"
             placeholder="Name"
             class="form-control"/>
    </div>
    <div class="form-group">
      <label for="dimension">Dimension</label>
      <select name="dimension"
              class="form-control">
        <option {% if publisher.dimension == 'SMALL' %}selected{% endif %} value="SMALL">Small</option>
        <option {% if publisher.dimension == 'MEDIUM' %}selected{% endif %} value="MEDIUM">Medium</option>
        <option {% if publisher.dimension == 'BIG' %}selected{% endif %} value="BIG">Big</option>
      </select>
    </div>
    <div class="form-group d-flex justify-content-end">
      <button type="submit"
              class="btn btn-success">
        Submit
      </button>
    </div>
  </form>
{% endblock %}